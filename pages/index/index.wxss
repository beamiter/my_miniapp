Page {
  background-color: #f1f1f1;
  width: 100%;
  height: 100%;
}

.all-block {
  position: relative;
}

.bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.title {
  padding: 5px;
  display: flex;
  justify-content: space-between;
}

.main-block {
  margin-top: 20px; 
  margin-left: 5%;
  position: absolute;
  width: 90%;
  border-radius: 8px;
  /* box-shadow: 0 0 5px grey; */
  background-color: white;
}

.logo {
  position: relative;
  height: 40px;
  width: 40px;
  top: 14px;
  left: 10px;
}

.r-logo {
  position: relative;
  height: 55px;
  width: 55px;
  top: 14px;
  right: -5px;
  opacity: 0.8;
}

.day {
  padding-top: 10px;
  text-align: center;
  color: #6a6a6a;
}

.canvas-group {
  margin-top: 10px;
  align-items: center;
  display: flex;
  justify-content: center;
}

.status-group {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  margin-top: 10px;
}

.status {
  text-align: center;
  color: #07c160;
  font-size:x-large;
  margin-left: 10px;
}

.question {
  position: relative;
  height: 20px;
  width: 20px;
  top: 2px;
  margin-left: 5px;
}

.name-group {
  padding-top: 5px;
  padding-left: 15px;
  padding-right: 15px;
  padding-bottom: 5px;
  display: flex;
  justify-content: space-between;
}
.name {
  color: #9a9a9a;
}
.id-group {
  padding-top: 5px;
  padding-left: 15px;
  padding-right: 15px;
  padding-bottom: 5px;
  display: flex;
  justify-content: space-between;
}
.id {
  color: #9a9a9a;
}
.lookup-group {
  padding-top: 5px;
  padding-left: 15px;
  padding-right: 15px;
  padding-bottom: 5px;
  display: flex;
  justify-content: space-between;
}
.lookup {
  color: #9a9a9a;
}
.invalid-group {
  padding-top: 5px;
  padding-left: 15px;
  padding-right: 15px;
  padding-bottom: 20px;
  display: flex;
  justify-content: space-between;
}
.invalid {
  color: #9a9a9a;
}
.my-invalid {
  color: red;
}

.home {
  margin-right: 20px;
  margin-left: 20px;
  border-radius: 5px;
  box-shadow: 0 0 5px grey;
  background-color: #317FFF;
  top: 515px;
  position: relative;
}

.button-home {
  color: white;
  background-color: #317FFF;
  text-align: center;
}

.bj-center {
  text-align: center;
  color: #cdcdcd;
  font-size: small;
  top: 510px;
  position: relative;
  margin-top: 15px;
}