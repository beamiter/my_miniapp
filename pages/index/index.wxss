Page {
  background-color: #f1f1f1;
}


.title {
  padding: 5px;
  display: flex;
  justify-content: space-between;
}

.main-block {
  margin-top: 30px; 
  margin-left: 20px;
  margin-right: 20px;
  border-radius: 5px;
  position: relative;
  box-shadow: 0 0 5px grey;
}

.logo {
  position: relative;
  width: 35px;
  top: 10px;
  left: 10px;
}

.r-logo {
  position: relative;
  height: 35px;
  width: 35px;
  top: 10px;
  right: 10px;
  opacity: 0.8;
}

.day {
  padding-top: 10px;
  text-align: center;
  color: #6a6a6a;
}

.canvas-group {
  margin-top: 10px;
  align-items: center;
  display: flex;
  justify-content: center;
}

.status-group {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  margin-top: 10px;
}

.status {
  text-align: center;
  color: #07c160;
  font-size:x-large;
}

.name-group {
  padding-top: 5px;
  padding-left: 15px;
  padding-right: 15px;
  padding-bottom: 5px;
  display: flex;
  justify-content: space-between;
}
.name {
  color: #9a9a9a;
}
.id-group {
  padding-top: 5px;
  padding-left: 15px;
  padding-right: 15px;
  padding-bottom: 5px;
  display: flex;
  justify-content: space-between;
}
.id {
  color: #9a9a9a;
}
.lookup-group {
  padding-top: 5px;
  padding-left: 15px;
  padding-right: 15px;
  padding-bottom: 5px;
  display: flex;
  justify-content: space-between;
}
.lookup {
  color: #9a9a9a;
}
.invalid-group {
  padding-top: 5px;
  padding-left: 15px;
  padding-right: 15px;
  padding-bottom: 20px;
  display: flex;
  justify-content: space-between;
}
.invalid {
  color: #9a9a9a;
}
.my-invalid {
  color: red;
}

.home {
  /* margin: 0 auto; */
  margin-right: 20px;
  margin-left: 20px;
  border-radius: 5px;
  box-shadow: 0 0 5px grey;
  background-color: #317FFF;
}

.button-home {
  margin-top: 20px;
  margin-bottom: 15px;
  color: white;
  background-color: #317FFF;
  text-align: center;
}

.bj-center {
  text-align: center;
  color: #cdcdcd;
  font-size: small;
}